%html{lang: "en"}
  %head
    %meta{charset: "utf-8"}/
    %title Practica_5
    %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}/
    %meta{content: "", name: "description"}/
    %meta{content: "bootstrappage.com", name: "author"}/
    / Bootstrap style
    %link{href: "public/assets/css/bootstrap.min.css", rel: "stylesheet"}/
    %link{href: "public/assets/css/comingsoon.css", rel: "stylesheet"}/
